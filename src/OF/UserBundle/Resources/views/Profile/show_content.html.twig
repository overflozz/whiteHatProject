{% trans_default_domain 'FOSUserBundle' %}
<br />
    <div class="row">
        <div class="fos_user_user_show col s12 ">
	<div class="card elevation1 white">
    <div class="right">
        
        <a class="button_square" href="{{ path('fos_user_security_logout')}}">{{'Logout'|trans}}</a>
    </div>
            <div class="profilepic" style=" display:flex;   justify-content:center; width:100%;  align-items:center;">
                <img  class="profilePictureUserPanel  circle" src="{% if app.user.getProfilePicturePath is null %} {{ asset("images/default-user.png") }} {% else %}{{ asset(user.getWebProfilePicturePath) }} {% endif %}" title="profilePicture">
            </div>

            <div style="text-align:center; width:100%; font-size : 25px; font-weight:600">{{ user.nom|upper}}
                {{ user.prenom|capitalize}}</div>
            <div style="text-align:center; width:100%; font-size : 13px; font-weight:400">
                <a class="button_square_filled" href="{{ path('fos_user_profile_edit')}}">{{'Edit my profile'|trans}}</a>
            </div>

            <br/>
            <div class="row">
                <div class="col m6 s12">
                    <div class="panel panel-default ">
                        <div class="panel-heading">
                            <b>{{'Informations Personnelles'|trans}}</b>
                        </div>
                        <div class="panel-body">
                            <b>
                                {{'Adresse mail'|trans}}
                            </b>:
                            {{ user.email }}
                            <br>
                                <b>
                                    {{'Téléphone'|trans}}
                                </b>:
                                {{ user.telephone }}</br />
                            <b>
                                {{'Nom'|trans}}
                            </b>
                            :
                            {{ user.nom|upper }}<br/>
                            <b>
                                {{'Prénom'|trans}}
                            </b>
                            :
                            {{ user.prenom|capitalize }}
                        </div>
                    </div>
                </div>
                <div class="col m6 s12">
                    <div class="panel panel-default ">
                        <div class="panel-heading">
                            <b>{{'Informations Complémentaires'|trans}}</b>
                        </div>
                        <div class="panel-body">
                            <b>
                                {{'Biographie'|trans}}
                            </b>:
                            {{ user.bio }}</br />
                    </div>
                </div>
            </div>

        </div>
    </div>

   
  
</div>
</div>